import { Instagram } from 'lucide-react'
---
    <footer class="bg-[var(--color-primary)] text-gray-100 py-8 px-4 md:px-6">
      <div class="container mx-auto flex flex-col items-center justify-between md:flex-row">
        <div class="flex items-center mb-4 md:mb-0">
          <Instagram class="size-8 mr-2" />
          <span class="text-lg font-semibold ml-2">Follow Us</span>
        </div>
        <div class="flex items-center">
          <a
            href="#"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-100 hover:text-[#e1306c] transition-colors duration-300"
          >
            @your_brand_handle
          </a>
        </div>
      </div>
    </footer>

